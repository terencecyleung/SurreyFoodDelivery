<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="t27.surreyfooddeliveryapp.CustomerOrderActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <!--header view-->
        <LinearLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.80"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:adjustViewBounds="true"
                    android:gravity="start"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:text="Surrey Food Delivery"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="0.20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:adjustViewBounds="true"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/guesticon" />
            </LinearLayout>


        </LinearLayout>
        <!--end header-->


        <!--name-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cust_order_name_textview"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/register_font_size"
                    android:text="Name*" />

                <EditText
                    android:id="@+id/cust_order_name_edittext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@android:drawable/editbox_background" />
            </LinearLayout>
            <!--end name-->

            <!--phone #-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cust_order_phone_textview"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/register_font_size"
                    android:text="Phone*" />

                <EditText
                    android:id="@+id/cust_order_phone_edittext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="phone" />
            </LinearLayout>
            <!--end phone #-->

            <!--email-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cust_order_email_textview"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/register_font_size"
                    android:text="Email" />

                <EditText
                    android:id="@+id/cust_order_email_edittext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <!--end email-->

            <!--space in the middle-->
            <View
                android:id="@+id/anchor2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true" />
            <!--end   space in the middle-->

            <!--address-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cust_order_address_textview"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/register_font_size"
                    android:text="Address" />

                <EditText
                    android:id="@+id/cust_order_address_edittext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="start"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <!--end address-->

            <!--detail-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cust_order_detail_textview"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/register_font_size"
                    android:text="Detail*" />

                <EditText
                    android:id="@+id/cust_order_detail_edittext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="10"
                    android:minHeight="100dp"
                    android:minLines="4"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>
            <!--end detail-->

            <!--date and time-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cust_order_time_textview"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/register_font_size"
                    android:text="Date and Time" />

                <EditText
                    android:id="@+id/cust_order_time_edittext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="@android:drawable/editbox_background"
                    android:text="Right away"
                    android:inputType="datetime" />
            </LinearLayout>
            <!--end date and time-->

            <!--space on bottom-->
            <View
                android:id="@+id/anchor3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true" />
            <!--end   space on bottom-->

        </LinearLayout>



        <!--submit button-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/button_order_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="cust_placeOrder_click"
                android:text="Place order" />
        </LinearLayout>
        <!--end submit button-->

    </LinearLayout>


</ScrollView>