<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="t27.surreyfooddeliveryapp.RegisterActivity">

<!--space on top-->
    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />
    <!--end   space on top-->


    <!--email-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/register_font_size"
            android:text="email" />

        <EditText
            android:id="@+id/email_et"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!--end email-->

    <!--password-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/passwordTv"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/register_font_size"
            android:text="Password*" />

        <EditText
            android:id="@+id/password_et"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!--end password-->

    <!--password2-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/password2Tv"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/register_font_size"
            android:text="Enter password again*" />

        <EditText
            android:id="@+id/password2_et"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!--end password2-->

    <!--space in the middle-->
    <View
        android:id="@+id/anchor2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true" />
    <!--end   space in the middle-->

    <!--Name-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/register_font_size"
            android:text="Name*" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!--end password2-->

    <!--phone-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/register_font_size"
            android:text="Phone*" />

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!--end phone-->

    <!--Address-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/addressTv"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/register_font_size"
            android:text="address" />

        <EditText
            android:id="@+id/address_et"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!--end Address-->

    <!--space on bottom-->
    <View
        android:id="@+id/anchor3"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true" />
    <!--end   space on bottom-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up" />

    </LinearLayout>









</LinearLayout>
